@model hairSalonScheduler.Models.CreateServiceViewModel
@{
    ViewData["Title"] = "Create Service";
    var stylists = (List<hairSalonScheduler.Models.Stylist>)ViewData["Stylists"];
}

<h1>Create Service</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="StylistIds">Stylist</label>
        <select asp-for="StylistIds" asp-items="ViewBag.StylistList" class="form-control" multiple id="stylist-select">
            <option value="">Select Stylist</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Category">Category</label>
        <select asp-for="Category" class="form-control">
            <option value="">Select Category</option>
            <option value="Haircut">Haircut</option>
            <option value="Color">Color</option>
            <option value="Highlights">Highlights</option>
            <option value="Balayage">Balayage</option>
            <option value="Blowout">Blowout</option>
            <option value="Updo">Updo</option>
            <option value="Keratin Treatment">Keratin Treatment</option>
            <option value="Extensions">Extensions</option>
            <option value="Perm">Perm</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Availability">Duration of Service</label>
        <select asp-for="Availability" class="form-control" id="availability-select">
            <option value="">Select Duration</option>
            <option value="1">1 hours</option>
            <option value="2">2 hours</option>
            <option value="3">3 hours</option>
            <option value="4">4 hours</option>
            <option value="5">5 hours</option>
            <option value="6">6 hours</option>
            <option value="7">7 hours</option>
            <option value="8">8 hours</option>
            <option value="9">9 hours</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Price">Price</label>
        <div class="input-group price-spinner">
            <input asp-for="Price" class="form-control price-input" type="number" id="price-input" min="0" max="2000" step="5" />
            <div class="input-group-append">
                <button class="btn btn-primary price-spinner-btn" type="button" id="price-spinner-up">
                    <i class="bi bi-chevron-up"></i>
                </button>
                <button class="btn btn-primary price-spinner-btn" type="button" id="price-spinner-down">
                    <i class="bi bi-chevron-down"></i>
                </button>
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Create Service</button>
</form>

@section scripts {

    <script>
        document.getElementById("price-spinner-up").addEventListener("click", function () {
            let input = document.getElementById("price-input");
            let value = parseInt(input.value, 10) || 0;
            input.value = Math.min(value + 5, 2000);
        });

        document.getElementById("price-spinner-down").addEventListener("click", function () {
            let input = document.getElementById("price-input");
            let value = parseInt(input.value, 10) || 0;
            input.value = Math.max(value - 5, 0);
        });
    </script>


}