@{
    ViewData["Title"] = "Home";
}
<!--Filler Bootstrap index.-->
<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">Welcome to Our Hair Salon</h1>
        <p class="lead">Experience the best in hair care and styling at our salon. Our talented stylists are dedicated to providing you with a personalized and enjoyable experience.</p>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <img src="https://via.placeholder.com/300x200" class="card-img-top" alt="Stylist Image">
                <div class="card-body">
                    <h5 class="card-title">Our Stylists</h5>
                    <p class="card-text">Meet our team of skilled stylists who are passionate about their craft and dedicated to helping you look and feel your best.</p>
                    <a asp-controller="Stylist" asp-action="GetStylist" class="btn btn-primary">View Stylists</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <img src="https://via.placeholder.com/300x200" class="card-img-top" alt="Services Image">
                <div class="card-body">
                    <h5 class="card-title">Our Services</h5>
                    <p class="card-text">Explore our wide range of hair care services, including cuts, styling, coloring, and treatments, tailored to your individual needs.</p>
                    <a asp-controller="Service" asp-action="GetService" class="btn btn-primary ">View Services</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <img src="https://via.placeholder.com/300x200" class="card-img-top" alt="Appointment Image">
                <div class="card-body">
                    <h5 class="card-title">Book an Appointment</h5>
                    <p class="card-text">Ready for a new look or just need a trim? Book an appointment with one of our talented stylists today!</p>
                    <a asp-controller="Appointment" asp-action="CreateAppointment" class="btn btn-primary ">Book Now</a>
                </div>
            </div>
        </div>
    </div>
</div>