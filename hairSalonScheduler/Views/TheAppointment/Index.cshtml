@model IEnumerable<hairSalonScheduler.Models.TheAppointment>

<h1>Appointments</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>UserId</th>
            <th>EmployeeId</th>
            <th>ServiceId</th>
            <th>AppointmentDate</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.UserId</td>
                <td>@item.EmployeeId</td>
                <td>@item.ServiceId</td>
                <td>@item.AppointmentDate</td>
                <td>@item.AppointmentStatus</td>
            </tr>
        }
    </tbody>
</table>
