@model IEnumerable<hairSalonScheduler.Models.StylistHours>

@{
    ViewData["Title"] = "Manage Stylist Hours";
}

<h2>@ViewData["Title"]</h2>
<a asp-action="CreateStylistHour" class="btn btn-primary">Add New Stylist Hour</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>StylistID</th>
            <th>DayOfWeek</th>
            <th>StartTime</th>
            <th>EndTime</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hours in Model)
        {
            <tr>
                <td>@hours.ID</td>
                <td>@hours.StylistID</td>
                <td>@hours.DayOfWeek</td>
                <td>@hours.StartTime</td>
                <td>@hours.EndTime</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@hours.ID">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@hours.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
