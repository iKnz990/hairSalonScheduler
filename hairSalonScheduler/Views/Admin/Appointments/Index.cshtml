@model IEnumerable<hairSalonScheduler.Models.Appointment>

@{
    ViewData["Title"] = "Manage Appointments";
}

<h2>@ViewData["Title"]</h2>

<a asp-action="CreateAppointment" class="btn btn-primary">Add New Appointment</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Date</th>
            <th>Time</th>
            <th>ApptType</th>
            <th>AdditionalInformation</th>
            <th>UserID</th>
            <th>StylistID</th>
            <th>CurrentHairPhotoPath</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appointment in Model)
        {
            <tr>
                <td>@appointment.ID</td>
                <td>@appointment.Date.ToShortDateString()</td>
                <td>@appointment.Time</td>
                <td>@appointment.ApptType</td>
                <td>@appointment.AdditionalInformation</td>
                <td>@appointment.UserID</td>
                <td>@appointment.StylistID</td>
                <td>@appointment.CurrentHairPhotoPath</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@appointment.ID">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@appointment.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
