@model IEnumerable<hairSalonScheduler.Models.StylistService>

@{
    ViewData["Title"] = "Manage Stylist Services";
}

<h2>@ViewData["Title"]</h2>
<a asp-action="CreateStylistService" class="btn btn-primary">Add New Stylist Service</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>StylistID</th>
            <th>ServiceID</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var stylistService in Model)
        {
            <tr>
                <td>@stylistService.ID</td>
                <td>@stylistService.StylistID</td>
                <td>@stylistService.ServiceID</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@stylistService.ID">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@stylistService.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>