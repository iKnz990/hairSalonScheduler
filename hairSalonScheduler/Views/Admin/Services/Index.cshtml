@model IEnumerable<hairSalonScheduler.Models.TheService>

@{
    ViewData["Title"] = "Manage Services";
}

<h2>@ViewData["Title"]</h2>
<a asp-action="CreateService" class="btn btn-primary">Add New Service</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Type</th>
            <th>Cost</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var service in Model)
        {
            <tr>
                <td>@service.ID</td>
                <td>@service.Name</td>
                <td>@service.Type</td>
                <td>@service.Cost.ToString("C")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@service.ID">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@service.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
