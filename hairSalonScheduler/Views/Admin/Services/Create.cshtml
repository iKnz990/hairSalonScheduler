@using hairSalonScheduler.Models;
@model hairSalonScheduler.Models.TheService

@{
    ViewData["Title"] = "Add New Service";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="CreateService" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Service Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Type" class="control-label">Service Type</label>
        <select asp-for="Type" class="form-control" asp-items="Html.GetEnumSelectList<ServiceType>()"></select>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Cost" class="control-label">Service Cost</label>
        <input asp-for="Cost" class="form-control" />
        <span asp-validation-for="Cost" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Services">Back to Services List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
