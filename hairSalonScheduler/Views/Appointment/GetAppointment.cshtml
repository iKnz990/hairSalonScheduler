@model IEnumerable<hairSalonScheduler.Models.Appointment>

<table class="table">
    <thead>
        <tr>
            <th>Selected Date Time</th>
            <th>Status</th>
            <th>Payment Status</th>
            <th>Customer</th>
            <th>Stylist</th>
            <th>Service</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appointment in Model)
        {
    <tr>
                <td>@Html.DisplayFor(modelItem => appointment.SelectedDateTime)</td>
                <td>@Html.DisplayFor(modelItem => appointment.Status)</td>
                <td>@Html.DisplayFor(modelItem => appointment.PaymentStatus)</td>
                <td>@Html.DisplayFor(modelItem => appointment.Customers.Name)</td>
                <td>@Html.DisplayFor(modelItem => appointment.Stylists.Name)</td>
                <td>@Html.DisplayFor(modelItem => appointment.Services.Category)</td>
                <td>@Html.DisplayFor(modelItem => appointment.Services.Price)</td>
        <td>
                    <a asp-action="EditAppointment" asp-route-id="@appointment.Id">Edit</a> |
                    <a asp-action="DeleteAppointment" asp-route-id="@appointment.Id">Delete</a>
        </td>
    </tr>
        }
    </tbody>
</table>